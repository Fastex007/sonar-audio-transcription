{
  "manifest_version": 3,
  "name": "Audio Tab Recorder",
  "version": "1.0.0",
  "description": "Capture audio from browser tabs and stream to backend",
  "permissions": [
    "tabCapture",
    "activeTab",
    "scripting",
    "offscreen"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
